<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TextView 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:id="@+id/StatusLogLabel" 
		android:text="@string/StatusLogLabelText">
	</TextView>
	<EditText android:editable="false" android:layout_width="fill_parent" android:text="EditText" android:gravity="left" android:id="@+id/statusText" android:layout_gravity="top" android:layout_height="fill_parent" android:layout_weight="1"></EditText>
	<EditText android:layout_width="fill_parent" android:text="EditText" android:id="@+id/editText1" android:layout_gravity="center_vertical" android:layout_height="fill_parent" android:layout_weight="1"></EditText>
	<Button android:layout_width="wrap_content" android:id="@+id/button1" android:text="Button" android:layout_height="fill_parent" android:layout_weight="1.4"></Button>
</LinearLayout>
