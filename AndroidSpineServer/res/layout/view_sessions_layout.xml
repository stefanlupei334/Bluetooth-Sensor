<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/chart_gradient_end"
	>
	
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:id="@+id/linearLayout1" 
    	android:layout_width="fill_parent"
		android:orientation="vertical"
		android:background="@color/chart_gradient_end"
    	>
        
        <LinearLayout 
        	android:id="@+id/deviceChart" 
        	android:layout_height="200dip" 
        	android:orientation="horizontal" 
        	android:layout_width="fill_parent" 
        	android:gravity="right"
			android:background="@drawable/chart_background"      
        	>
        </LinearLayout>
        
        <LinearLayout 
        	android:id="@+id/linearLayout2" 
        	android:layout_height="wrap_content" 
        	android:layout_width="fill_parent"
        	>
            
            <Button android:layout_height="48dip" android:layout_width="48dip" android:id="@+id/monthMinusButton" android:text="&lt;"></Button>
            <TextView android:layout_height="wrap_content" android:text="Month Name" android:gravity="center" android:layout_width="wrap_content" android:textColor="@color/chart_text" android:id="@+id/monthName" android:layout_weight="1.0"></TextView>
            <Button android:layout_height="48dip" android:layout_width="48dip" android:id="@+id/monthPlusButton" android:text="&gt;"></Button>
            

        </LinearLayout>
    </LinearLayout>

    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:id="@+id/linearLayout2" 
    	android:layout_width="fill_parent"
    	>
        	<ListView 
        		android:layout_height="wrap_content" 
        		android:layout_width="fill_parent" 
        		android:id="@+id/listViewSessionKeys"
        		>
        	</ListView>
    </LinearLayout>
		
	<!-- The month selector -->
</LinearLayout>
