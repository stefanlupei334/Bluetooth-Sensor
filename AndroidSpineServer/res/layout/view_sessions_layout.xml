<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/chart_gradient_end">
    <LinearLayout 
    	android:id="@+id/deviceChart" 
    	android:layout_height="200dip" 
    	android:orientation="horizontal" 
    	android:gravity="right" 
    	android:layout_width="fill_parent">
    </LinearLayout>
	
	
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="fill_parent">
        <FrameLayout android:layout_height="wrap_content" android:id="@+id/chartContainer" android:layout_width="fill_parent" android:background="@drawable/chart_background" android:layout_weight="1.0">
            <TextView android:text="Toggle a key button below to see some charts." android:gravity="center" android:layout_width="fill_parent" android:textColor="@color/chart_text" android:layout_height="fill_parent" android:id="@+id/textView1"></TextView>
            <LinearLayout android:id="@+id/chartWrapper" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <FrameLayout android:layout_height="fill_parent" android:id="@+id/chartLabels" android:layout_width="wrap_content">
                    <TextView android:text="@string/chart_high" android:layout_width="wrap_content" android:textAppearance="@android:style/TextAppearance.Small" android:layout_gravity="top|left" android:textColor="#FFFFFFFF" android:layout_height="wrap_content" android:id="@+id/textView2"></TextView>
                    <TextView android:paddingBottom="5dip" android:text="@string/chart_low" android:layout_width="wrap_content" android:textAppearance="@android:style/TextAppearance.Small" android:layout_gravity="bottom|left" android:textColor="#FFFFFFFF" android:layout_height="wrap_content" android:id="@+id/textView3"></TextView>
                </FrameLayout>
                <ViewSwitcher android:background="@drawable/chart_background" android:layout_height="fill_parent" android:id="@+id/chartSwitcher" android:layout_width="wrap_content"></ViewSwitcher>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="fill_parent">
            <Button android:layout_height="48dip" android:layout_width="48dip" android:id="@+id/monthMinusButton" android:text="&lt;"></Button>
            <TextView android:layout_height="wrap_content" android:text="Month Name" android:gravity="center" android:layout_width="wrap_content" android:textColor="@color/chart_text" android:id="@+id/monthName" android:layout_weight="1.0"></TextView>
            <Button android:layout_height="48dip" android:layout_width="48dip" android:id="@+id/monthPlusButton" android:text="&gt;"></Button>
            <LinearLayout android:layout_height="fill_parent" android:id="@+id/linearLayout3" android:layout_width="wrap_content"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="fill_parent">
        <ListView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/listViewSessionKeys"></ListView>
    </LinearLayout>
		
	<!-- The month selector -->
</LinearLayout>
